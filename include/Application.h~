#ifndef _APPLICATION_H
#define _APPLICATION_H
#include <vector>

class App {
	public:
		App() : index(-1), comp_req(-1), memo_req(-1), band_req(-1), image_size(-1), num_servers(-1), num_replicas(-1) {}
		App( int, int, int, int, int, int, int num_r=0, bool reps[]=NULL );
		
		int getIndex();
		int getCompReq();
		int getMemoReq();
		int getBandReq();
		int getImageSize();
		int getNumServers();
		int getNumReplicas();
		bool getReplica( int );
		
		void setAll( int, int, int, int, int, int, int, bool [] );
		void setIndex( int );
		void setCompReq( int );
		void setMemoReq( int );
		void setBandReq( int );
		void setImageSize( int );
		void setNumServers( int );
		void setNumReplicas( int );
		void setReplica( int, bool );

	private:
		int index;
		int comp_req;
		int memo_req;
		int band_req;
		int image_size;

		int num_servers;
		int num_replicas;
		std::vector<bool> replicas;
};

#endif
